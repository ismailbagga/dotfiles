
[
  // ------------------------------------ Key Binding
  // TERMINAL NAVIGATION
  // FOCUS ON THE NEXT TERMINAL
  {
    "key": "ctrl+b",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "shift+a",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus"
  },
  // FOCUS ON PREV TERMINAL
  {
    "key": "shift+b",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus"
  },
  // TOGGLE TERMINAL PANEL (CREATE NEW IF NO TERMINAL  EXISTS)
  {
    "key": "ctrl+t",
    "command": "workbench.action.togglePanel"
  },
  // OPEN NEW PANEL WHEN TERMINAL BEING FOCUS ON
  {
    "key": "shift+n",
    "command": "workbench.action.terminal.new",
    "when": "terminalFocus"
  },
  // --------------------------------------------------------------------------------------
  // FILE TREE
  // Create NEáº† FILE
  {
    "key": "ctrl+c",
    "command": "renameFile",
    "when": "explorerViewletFocus"
  },
  {
    "key": "ctrl+n",
    "command": "explorer.newFile",
    "when": "explorerViewletFocus"
  },
  // CREATE NEW FOLDER
  {
    "key": "ctrl+shift+n",
    "command": "explorer.newFolder",
    "when": "explorerViewletFocus"
  },
  {
    "key": "ctrl+shift+n",
    "command": "workbench.action.newWindow",
    "when": "!explorerViewletFocus"
  },
  {
    "key": "ctrl+shift+d",
    "command": "deleteFile",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceReadonly"
  },
  {
    "key": "q",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "explorerViewletVisible && filesExplorerFocus"
  },
  {
    "key": "ctrl+shift+oem_2",
    "command": "editor.action.commentLine",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+oem_2",
    "command": "-editor.action.commentLine",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+oem_2",
    "command": "editor.action.blockComment",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "shift+alt+a",
    "command": "-editor.action.blockComment",
    "when": "editorTextFocus && !editorReadonly"
  }
  // ---------------------------------------------
]